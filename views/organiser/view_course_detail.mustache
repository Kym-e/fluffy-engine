<html>
<head>
    {{>base_header}}
</head>
<body>
<!-- Nav bar -->
{{>organiser/org_nav}}

<!-- Create Course Form -->
<main>
    <div class="mt-20 mb-10  text-center justify-center items-center mx-10 my-5
                not-md:mt-10 not-md:mb-10">
        <!-- Heading -->
        <div>
            <p class="text-5xl text-center font-lacquer text-gray-700">{{course}}: Class list</p>
        </div>

        {{#entries}}
        <!-- bookings list -->
            <div class="grid md:grid-cols-3 md:gap-4
                        object-cover rounded-lg shadow-lg
                        mt-3 mx-10 py-5 px-5">
                <div class="not-md:text-center border-2 border-gray-500 rounded-lg p-3 shadow-lg">
                    <p class="text-2xl text-gray-700 font-semibold">Name:</p>
                    <p class="text-xl text-gray-700">{{name}}</p>
                </div>
                <div class="not-md:text-center border-2 border-gray-500 rounded-lg p-3 shadow-lg">
                    <p class="text-2xl text-gray-700 font-semibold">Email:</p>
                    <p class="text-xl text-gray-700">{{email}}</p>
                </div>
                <div class="not-md:text-center border-2 border-gray-500 rounded-lg p-3 shadow-lg">
                    <p class="text-2xl text-gray-700 font-semibold">Under Eighteen?</p>
                    <div>
                        {{#isUnderEighteen}}
                            <p class="text-xl text-green-500"><i class="fa-solid fa-square-check"></i></p>
                        {{/isUnderEighteen}}
                        {{^isUnderEighteen}}
                            <p class="text-xl text-red-500"><i class="fa-solid fa-square-xmark"></i></p>
                        {{/isUnderEighteen}}
                    </div>

                </div>
                <div class="md:col-span-3 not-md:text-center border-2 border-gray-500 rounded-lg p-3 shadow-lg">
                    <p class="text-2xl text-gray-700 font-semibold">Additional Information</p>
                    <p class="text-xl text-gray-700">{{additionalInfo}}</p>
                </div>
            </div>
        {{/entries}}
        {{^entries}}
            <div class="text-center">
                <p class="text-2xl text-gray-700 font-semibold">No bookings found for this course.</p>
            </div>
        {{/entries}}
    </div>
</main>

</body>
</html>